<h1>Edit Playlist</h1>
<br>
<%= form_for @playlist do |f| %>
  <h4>Title: </h4>
  <%= f.text_field :title %><br>
  <br>

  <h4>Description: </h4>
  <%= f.text_area :description %><br>
  <br>

  <%= label :private, "Private", value: true %>
  <%= f.radio_button :private, true, :checked => true, :value => true %>

  <%= label :private, "Public", value: false %>
  <%= f.radio_button :private, false, :value => false %>

  <br>
  <br>

  <label for="playlist[song][id]">Add Song: </label>
  <input list="songs" name="playlist[song][id]" />
  <datalist id="songs">
    <% Song.all.each do |song| %>
      <option value="<%= song.name %> --- <%= song.artist %>">
    <% end %>
  </datalist>
  <br>
  <br>

  <%= f.submit "Edit Playlist" %>
<% end %>
